{
    "servicerestart": "service wikijs restart",
    "serviceget": "/usr/local/bin/wikijsget",
    "serviceset": "/usr/local/bin/wikijsset",
    "options": {
        "dbname": {
            "type": "string",
            "name": "Database name",
            "description": "Database to use for Wiki.js setup",
            "readonly": true
        },
        "dbuser": {
            "type": "string",
            "name": "Database user",
            "description": "Database user to use for Wiki.js setup",
            "readonly": true
        },
        "dbpassword": {
            "type": "string",
            "name": "Database password",
            "description": "Password to use for Wiki.js setup",
            "readonly": true
        },
        "logging": {
            "type": "combo",
            "name": "Logging verbosity",
            "description": "Change the logging verbosity setting of Wiki.js",
            "requirerestart": true,
            "default": "info",
            "options": {
                "error": "Error",
                "warn": "Warn",
                "info": "Info",
                "verbose": "Verbose",
                "debug": "Debug",
                "silly": "Very verbose (silly)"
            }
        }
    }
}
